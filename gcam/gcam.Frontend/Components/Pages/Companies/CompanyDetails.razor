@page "/companies/details/{CompanyId:int}"
@if (loading)
{
    <Loading/>
}
else
{
    <MudTable Items="@contacts"
              @ref="table"
              ServerData="LoadListAsync"
              Dense="true"
              Hover="true"
              Striped="true"
              FixedHeader="true"
              FixedFooter="true">
        <ToolBarContent>
            <MudText Typo="Typo.h6" Class="mr-4"><i class="bi bi-globe-americas"></i> @company!.Name</MudText>
            <MudButton Variant="Variant.Outlined" Class="mr-4" StartIcon="@Icons.Material.Filled.ArrowBack" Color="Color.Tertiary" OnClick="ReturnAction">Regresar</MudButton>
            <MudButton Variant="Variant.Outlined" Class="mr-4" EndIcon="@Icons.Material.Filled.Person" Color="Color.Info" OnClick="@(() => ShowModalAsync())">Crear</MudButton>
            <MudSpacer />
            <FilterComponent ApplyFilter="SetFilterValue" />
        </ToolBarContent>
        <HeaderContent>
            <MudTh>Contacto</MudTh>
            <MudTh>Teléfono/Celular</MudTh>
            <MudTh>Correo electrónico</MudTh>
            <MudTh>Cargo</MudTh>
            <MudTh style="width: 270px;">Acciones</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Contacto">@context.FullName</MudTd>
            <MudTd DataLabel="Teléfono/Celular">@context.CelularNumber</MudTd>
            <MudTd DataLabel="Correo electrónico">@context.Email</MudTd>
            <MudTd DataLabel="Cargo">@context.Position</MudTd>
            <MudTd DataLabel="Acciones">
                <MudTooltip Text="Editar">
                    <MudButton Variant="Variant.Filled"
                               Color="Color.Warning"
                               OnClick="@(() => ShowModalAsync(context.Id, true))">
                        <MudIcon Icon="@Icons.Material.Filled.Edit" />
                    </MudButton>
                </MudTooltip>
                <MudTooltip Text="Borrar">
                    <MudButton Variant="Variant.Filled"
                               Color="Color.Error"
                               OnClick="@(() => DeleteAsync(@context))">
                        <MudIcon Icon="@Icons.Material.Filled.Delete" />
                    </MudButton>
                </MudTooltip>
            </MudTd>
        </RowTemplate>
        <NoRecordsContent>
            <MudText>No se encontraron registros.</MudText>
        </NoRecordsContent>
        <PagerContent>
            <MudTablePager RowsPerPageString="Numero de Registros:"
                           PageSizeOptions="pageSizeOptions"
                           AllItemsText="Todos"
                           InfoFormat="@infoFormat" />
        </PagerContent>
    </MudTable>

}